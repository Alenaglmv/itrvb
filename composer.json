{
    "name": "galim/itrvb",
    "autoload": {
        "psr-4": {
            "Galim\\Itrvb\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Galim\\Itrvb\\Blog\\UnitTests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Alenaglmv"

        }
    ],
    "scripts": {
        "test": "phpunit tests --testdox --colors",
        "test:coverage": "php -dxdebug.mode=coverage vendor/bin/phpunit tests --coverage-html coverage-report --coverage-filter src"
    },
    "require": {
        "fakerphp/faker": "^1.23",
        "symfony/polyfill-uuid": "^1.28",
        "ext-pdo": "*",
        "symfony/http-foundation": "^7.0",
        "monolog/monolog": "^3.5"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpunit/phpunit": "^10.4"
    }
}
